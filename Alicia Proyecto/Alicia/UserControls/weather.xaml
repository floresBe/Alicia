<UserControl
    x:Class="Alicia.UserControls.weather"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Alicia.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
>
    <Pivot Name="PivotMain">
        <PivotItem>
            <Grid Padding="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image x:Name="imgTemperaturaActual" Margin="10"/>
                <TextBlock x:Name="tBCiudad" HorizontalAlignment="Center" Margin="42.75,10,33.875,93.875" TextWrapping="Wrap" Text="Alaska" VerticalAlignment="Center" Grid.Column="1" Foreground="#FF289DB6" FontSize="21"/>
                <TextBlock x:Name="tBTemperaturaActual" HorizontalAlignment="Center" Margin="44.75,33,9.875,38.875" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" FontSize="60" Foreground="#FF2BB9D8" Width="106" RenderTransformOrigin="0.496,0.538" SelectionChanged="tBTemperaturaActual_SelectionChanged" Height="70" Grid.Column="1"/>
                <TextBlock x:Name="tB" HorizontalAlignment="Center" Margin="46.75,116,40.875,1.875" TextWrapping="Wrap" Text="Lluvioso" VerticalAlignment="Center" Grid.Column="1" Foreground="#FF289DB6" FontSize="20" Width="73" Height="24"/>
            </Grid>
        </PivotItem>
        <PivotItem>
            <Grid Grid.ColumnSpan="2" Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height=".3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Image x:Name="imgDia1" Margin="10,55,10,120" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>
                <Image x:Name="imgDia2" Margin="10,55,10,120" Grid.Column="1" RenderTransformOrigin="0.527,0.534" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image x:Name="imgDia3" Margin="10,55,10,120" Grid.Column="2" Height="50" Width="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image x:Name="imgDia4" Margin="10,55,10,120" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>
                <Image x:Name="imgDia5" Margin="10,55,10,120" Grid.Column="4" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Image x:Name="imgDia6" Margin="10,55,10,120" Grid.Column="5" Width="50" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="tBTemperaturaDia1" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Foreground="#FF2BB9D8" FontSize="20" Width="35"/>
                <TextBlock x:Name="tBTemperaturaDia2" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Foreground="#FF2BB9D8" FontSize="20" Width="35"/>
                <TextBlock x:Name="tBTemperaturaDia3" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Foreground="#FF2BB9D8" FontSize="20" Width="35"/>
                <TextBlock x:Name="tBTemperaturaDia4" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" Grid.Row="1" Grid.Column="3" Foreground="#FF289DB6" FontSize="20" Width="35"/>
                <TextBlock x:Name="tBTemperaturaDia5" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" Grid.Row="1" Grid.Column="4" Foreground="#FF289DB6" FontSize="20" Width="35"/>
                <TextBlock x:Name="tBTemperaturaDia6" HorizontalAlignment="Center" Margin="5" TextWrapping="Wrap" Text="00*" VerticalAlignment="Center" Grid.Row="1" Grid.Column="5" Foreground="#FF289DB6" FontSize="20" Width="35"/>
            </Grid>
        </PivotItem>
    </Pivot>


</UserControl>
